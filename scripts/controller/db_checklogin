import mysql from 'mysql2'
import { Database } from './database_abs.js'

class DBCheckLogin {
    constructor() {
        this.db = new Database();
    }

    async check_username(username) {
        var sql = (`SELECT username FROM player WHERE username = ?`, [username]);
        var rows = await this.db.query(sql);
        console.log(rows);
        if (rows == -1) {
            return -1;
        }
        else {
            console.log('username found')
            return rows[0];
        }
        
    }

    async check_password(username,password) {
        var sql = (`SELECT password FROM player WHERE username = ?`, [username]);
        var rows = await this.db.query(sql);
        console.log(rows);
        if (password == rows) {
            console.log('pw matches')
            return 1;
        }
        else {
            console.log('pw doesnt match')
            return 0;
        }
    }

    async insert_new_player(username, password) { //remove this later
        
        if (await this.#check_username(username) == -1) {
            var sql = [[`INSERT INTO player (username, password) VALUES (?, ?)`], [username, password]];
            console.log(sql);
            await this.db.query(sql);
        }
        else {
            return `${username} already taken!`
        }
    }
}

var checklogin = new DBCheckLogin();
console.log(await checklogin.insert_new_player('testplayer','password'));
console.log(await checklogin.check_username('testplayer'));
console.log(await checklogin.check_password('password'))